{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Warhammer 40k Unit Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "faction": {
      "type": "string"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "movement": {
          "type": "integer"
        },
        "toughness": {
          "type": "integer"
        },
        "save": {
          "type": "integer"
        },
        "wounds": {
          "type": "integer"
        },
        "leadership": {
          "type": "integer"
        },
        "objective_control": {
          "type": "boolean"
        }
      },
      "required": [
        "movement",
        "toughness",
        "save",
        "wounds",
        "leadership",
        "objective_control"
      ]
    },
    "ranged_weapons": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "range": {
            "type": "integer"
          },
          "attacks": {
            "type": "integer"
          },
          "skill": {
            "type": "integer"
          },
          "strength": {
            "type": "integer"
          },
          "ap": {
            "type": "integer"
          },
          "damage": {
            "type": "integer"
          }
        },
        "required": [
          "name",
          "range",
          "attacks",
          "skill",
          "strength",
          "ap",
          "damage"
        ]
      }
    },
    "melee_weapons": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "range": {
            "type": "integer"
          },
          "attacks": {
            "type": "integer"
          },
          "skill": {
            "type": "integer"
          },
          "strength": {
            "type": "integer"
          },
          "ap": {
            "type": "integer"
          },
          "damage": {
            "type": "integer"
          }
        },
        "required": [
          "name",
          "range",
          "attacks",
          "skill",
          "strength",
          "ap",
          "damage"
        ]
      }
    },
    "faction_abilities": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": ["name", "description"]
      }
    },
    "core_abilities": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": ["name", "description"]
      }
    },
    "regular_abilities": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": ["name", "description"]
      }
    },
    "wargear_abilities": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": ["name", "description"]
      }
    }
  },
  "required": [
    "name",
    "faction",
    "attributes",
    "weapons",
    "faction_abilities",
    "core_abilities",
    "regular_abilities",
    "wargear_abilities"
  ]
}
